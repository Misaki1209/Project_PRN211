@page
@model Project_PRN_Razor.Pages.Admin.EnrollmentPages.CreateEnrollment

@{
    Layout = "Shared/_LayoutAdmin";
}
@if (@ViewData["Message"] != null)
{
    <h1>@ViewData["Message"]</h1>
}
<div >
    <form method="post">
        <select class="form-select" name="teacherId">
            @foreach (var teacher in Model.TeacherList)
            {
                <option  value="@teacher.AccountId">@teacher.FullName</option>
            }
        </select>

        <select class="form-select" name="studentId" style="margin-top: 30px">
            @foreach (var student in Model.StudentList)
            {
                <option  value="@student.AccountId">@student.FullName</option>
            }
        </select>

        <select class="form-select" name="semesterId" style="margin-top: 30px">
            @foreach (var semester in Model.SemesterList)
            {
                <option  value="@semester.SemesterId">@semester.SemesterName</option>
            }
        </select>

        <select class="form-select" name="subjectId" style="margin-top: 30px">
            @foreach (var subject in Model.SubjectList)
            {
                <option  value="@subject.SubjectId">@subject.SubjectName</option>
            }
        </select>

        <select class="form-select" name="classId" style="margin-top: 30px">
            @foreach (var classs in Model.ClassList)
            {
                <option  value="@classs.ClassId">@classs.ClassName</option>
            }
        </select>
        <button class="btn btn-primary" type="submit" style="margin-top: 30px">Add</button>
    </form>

</div>